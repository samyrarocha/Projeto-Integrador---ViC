<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="movieTitle">
        <item name="android:text">@string/itemMovieTitle</item>
        <item name="fontFamily">@font/titles</item>
        <item name="android:textColor">@color/titles_selected_text_color</item>
        <item name="android:textSize">@dimen/medium_sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTabTextLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/medium_sp</item>
        <item name="fontFamily">@font/titles</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.App" parent="Theme.MaterialComponents">
        <item name="chipStyle">@style/Widget.App.Chip</item>
    </style>

    <style name="Widget.App.Chip" parent="">
        <item name="chipIconTint">#12153D</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeWidth">1.5dp</item>
        <item name="chipStrokeColor">#c8c8c8</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="Widget.App.Chip.Search" parent="">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="android:textColor">#11C76F</item>
        <item name="android:textAlignment">textStart</item>

    </style>

    <style name="Theme.App.Dialog.FullScreen"
        parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="ThemeOverlay.App.Chip" parent="">
        <item name="colorOnSurface">#12153D</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">
            @anim/fade_in
        </item>
        <item name="android:windowExitAnimation">
            @anim/fade_out
        </item>
    </style>

    <style name="TextAppearance.App.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/genre_button_text</item>
        <item name="android:fontFamily">@font/genre_button_text</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="movieAdditionalInfo">
        <item name="android:textSize">@dimen/small_sp</item>
        <item name="fontFamily">@font/titles</item>
        <item name="android:textColor">@color/titles_selected_text_color</item>
    </style>

    <style name="CustomCardCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners</item>
    </style>

    <style name="ShapeAppearance_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
    </style>


</resources>