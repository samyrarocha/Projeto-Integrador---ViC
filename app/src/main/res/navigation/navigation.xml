<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/navigateToMovieFeed">

    <action
        android:id="@+id/navigateToMovieFeed"
        app:destination="@id/allMoviesFragment"
        app:popUpToInclusive="true"/>

    <fragment
        android:id="@+id/allMoviesFragment"
        android:name="com.example.projeto_integrador.features.feed.presentation.AllMoviesFragment"
        android:label="Alll Movies"
        tools:layout="@layout/fragment_all_movies"/>

    <action
        android:id="@+id/navigateToMovieDetails"
        app:destination="@id/detailsFragment"
        app:popUpToInclusive="true"/>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.projeto_integrador.features.moviedetails.MovieDetailsFragment"
        android:label="Movie Details"
        tools:layout="@layout/fragment_movie_details"/>



</navigation>
