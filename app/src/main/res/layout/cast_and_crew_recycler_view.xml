<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/castAndCrewRecyclerView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/castAndCrewCardView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="24dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/castAndCrewImageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/itemMovieTitle"
            android:scaleType="centerCrop"
            tools:src="@drawable/cast_sample"/>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/castAndCrewNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/titles"
        android:textAlignment="center"
        android:textColor="@color/titles_text_color"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/castAndCrewCardView"
        tools:text="James Mangold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/castAndCrewJobTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/titles"
        android:textAlignment="center"
        android:textColor="@color/titles_text_color"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/castAndCrewNameTextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/castAndCrewNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/castAndCrewNameTextView"
        tools:text="Diretor" />

</androidx.constraintlayout.widget.ConstraintLayout>